@model RelogioPonto.Models.Relogio

@{
    ViewBag.Title = "Edit";
}

<h2>Altere as informações e salve novamente</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="caixaEdit">
        <div class="form-horizontal ">
           
            <br/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
